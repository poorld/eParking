.content{
  position: relative;
  width: 100%;
  height: 150vh;
}
#map{
 position: absolute;
 left: 0;
 right: 0;
 top: 0;
 bottom: 0;
 width: 100%;
 height: 100%;
 z-index: 1;
}
.bright789_view_hide{
    display: none;

}
.bright789_view_show{
  /* position: absolute; */
  display: block;
  width: 100%;
  height: 100%;
}
.bg {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 500px;
  background-color: #C2C2C2;
  opacity: 0.9;
  justify-content: space-between;
  position: fixed;
  top: 0;
}

.userinfo-avatar {
  margin-top: 0px;
  align-self: center;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  max-height: 200rpx;
  min-height: 100rpx;
  max-width: 200rpx;
  min-width: 100rpx; 
  border-color:beige;
  border-style:solid;
}
.container {
  width: 100%;
}
.text{
 margin: auto;
}
/* 用户头像 */
.number {
  margin-top: 20px;
  text-align: center;
  font-size: 30px;
  color: #0066cc
}

.time {
  text-align: center;
}
.time-content {
  font-size: 25px;
  color: #CD00CD
}

/*关闭隐藏按钮  */
.close {
  align-items: flex-end;
  width: 30px;
  height: 30px;
  border-radius: 50%;
}
.endride {
  align-self: center;
}

.endStop {
  text-align: center;
  line-height: 80px;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background-color: red;
}
